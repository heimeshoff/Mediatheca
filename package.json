{
  "name": "mediatheca",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "dotnet watch run --project src/Server/Server.fsproj",
    "dev:client": "vite",
    "build": "vite build",
    "test": "dotnet run --project tests/Server.Tests/Server.Tests.fsproj",
    "deploy": "docker build -t mediatheca:latest . && docker save mediatheca:latest -o mediatheca.tar"
  },
  "dependencies": {
    "@fontsource/inter": "^5.2.8",
    "@fontsource/oswald": "^5.2.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.0",
    "concurrently": "^9.1.0",
    "daisyui": "^5.0.0",
    "tailwindcss": "^4.1.0",
    "vite": "^6.1.0",
    "vite-plugin-fable": "^0.1.1"
  },
  "overrides": {
    "vite-plugin-fable": {
      "ts-lsp-client": "1.0.4"
    }
  }
}
