{
  "name": "mediatheca",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "client": "dotnet fable watch src/Client -o src/Client/output --extension .fs.js -s --run npx vite src/Client",
    "server": "dotnet watch run --project src/Server/Server.fsproj",
    "build:client": "dotnet fable src/Client -o src/Client/output --extension .fs.js && npx vite build src/Client",
    "test": "dotnet run --project tests/Server.Tests/Server.Tests.fsproj"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.1.0",
    "daisyui": "^5.0.0",
    "tailwindcss": "^4.1.0",
    "vite": "^6.1.0"
  }
}
